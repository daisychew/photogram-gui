<h1>List of users</h1>

<form action="users/<%= @query_username %>" method="post">
  <label for="username_box">
    Username 
  </label>
  <input type ="text" id="username_box" name="query_username" placeholder="Enter a username...">

  <button>Add user</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <td>
    </td>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <th>
      <%= user.id %>
    </th>

    <th>
      <%= user.username %>
    </th>

    <th>
      <a href="/users/<%= user.username %>">Show details</a>
    </th>
  </tr>
  <% end %>
</table>

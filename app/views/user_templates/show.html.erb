<ul>
  <li><a href="/users">Users</a>
  <li><a href="/photos">Photos</a>
</ul>

<h1><%= @user.username %></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%= @user.id %>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_user/<%= @user.id %>" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" value=<%= @user.username %>>

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%= @photos.length %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
    </th>
  </tr>

  <% @photos.each do |photo| %>
  <tr>
    <th>
      <img src="<%= photo.image %>">
    </th>

    <th>
      <%= @user.username %>
    </th>

    <th>
      <%= photo.caption %>
    </th>

    <th>
      <%= photo.created_at %>
    </th>

    <th>
      <a href="/photos/<%= photo.id %>">Show details</a>
    </th>
  </tr>
  <% end%>
</table>
